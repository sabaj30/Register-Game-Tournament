@model IEnumerable<Tournament.Model.Models.Game>;
@using Tournament.Model.Models;

<h1>ASP.Net</h1>

<a href="~/Games/Add" target="_blank">add</a>

<link href="~/css/bootstrap.css" rel="stylesheet" />





<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">@nameof(Game.Id)</th>
            <th scope="col">@nameof(Game.Title)</th>
            <th scope="col">@nameof(Game.Genre)</th>
            <th scope="col">@nameof(Game.Developer)</th>
            <th scope="col">@nameof(Game.Description)</th>

            <th scope="col">Action</th>


        </tr>
    </thead>
    <tbody>
        <tr>
            @if (Model != null)
            {
                @foreach (var game in Model)
                {
                <tr>
                    <td>
                        <label>@game.Id</label>
                    </td>
                    <td>
                        <label>@game.Title"</label>
                    </td>
                    <td>
                        <label>@game.Genre"</label>
                    </td>
                    <td>
                        <label>@game.Developer"</label>
                    </td>
                    <td>
                        <label>@game.Description"</label>
                    </td>
                    <a href="~/Games/Detail/@game.Id" target="_blank">2222</a>
                </tr>
                }
            }
    </tbody>
</table>